<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP_BUJ0034.SelectLevelMenu"
             xmlns:viewmodel="clr-namespace:DP_BUJ0034.ViewModels"
             x:DataType="viewmodel:SelectLevelViewModel"
             BackgroundImageSource="selectlevelmenu1.gif"
             Title="">
    
    <ScrollView >
        <Grid RowDefinitions="4*,20*" ColumnDefinitions="1*, 4*, 1*">
            <Label Text=" Výběr hry"
                Grid.Row="0" Grid.Column="1"
                TextColor="White" FontSize="20" 
                VerticalOptions="Center" HorizontalOptions="Center" 
            />
            <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="White" Opacity="0.5"
                 CornerRadius="20"
                     Margin="5"
                 >
            </BoxView>
            <Grid x:Name="LevelsLoad" ColumnDefinitions="1*,1*" Grid.Row="1" Grid.Column="1" Margin="5">
                <Label Text="{Binding Complete_score}"/>
             </Grid>
        </Grid>

    </ScrollView>
</ContentPage>