<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP_BUJ0034.MainPage"
             BackgroundImageSource="menu1.gif"
             >
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame BackgroundColor="#80FFFFFF" Opacity="60" CornerRadius="20" Padding="30,10,30,10" VerticalOptions="CenterAndExpand">
            <StackLayout VerticalOptions="CenterAndExpand" Spacing="10">
                <Button x:Name="CounterBtn" Text="Click me" SemanticProperties.Hint="Counts the number of times you click" Clicked="OnCounterClicked" HorizontalOptions="Center" Opacity="1.0"/>
                <Button x:Name="menulevelsbutton" Text="Hrát" Clicked="GoToMenuSelect" HorizontalOptions="Center" Opacity="1.0"/>
            </StackLayout>
        </Frame>
    </StackLayout>


</ContentPage>
