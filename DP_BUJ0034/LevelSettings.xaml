        <Label HorizontalOptions="Center" Text="Obtížnost" />
        <StackLayout Orientation="Horizontal" Spacing="0">
            <Button
                    CornerRadius="5"
                    x:Name="difficulty_1"
                    ImageSource="star_1.png"
                BackgroundColor="Transparent"
                    Command="{Binding num_of_starsCommand}"
                    CommandParameter="1"
                BorderWidth = "0"
                />
            <Button
                    CornerRadius="5"
                    x:Name="difficulty_2"
                ImageSource="star_2.png"
                BackgroundColor="Transparent"
                    Command="{Binding num_of_starsCommand}"
                    CommandParameter="2"
                BorderWidth = "0"
                />
            <Button
                    CornerRadius="5"
                    x:Name="difficulty_3"
                ImageSource="star_3.png"
                BackgroundColor="Transparent"
                    Command="{Binding num_of_starsCommand}"
                    CommandParameter="3"
                BorderWidth = "0"
                />
        </StackLayout>


        <Button
                Text="Spustit hru"
            Command="{Binding startGameCommand}"
            />
    </VerticalStackLayout>
</ContentPage>